  <h1>配送先登録/一覧</h1>


  <%= form_with model: @address, url: public_addresses_path do |f| %>

    <h4>郵便番号（ハイフンなし）</h4>
      <%= f.text_field :postal_code %>

    <h4>住所</h4>
    <%= f.text_field :address %>

    <h4>宛名</h4>
  	  <%= f.text_field :name %>
  	  <%= f.submit '新規登録' %>
  <% end %>

  <% @addresses.each do |address| %>
    <p>郵便番号</p>
    <span><%= address.postal_code %></span>
    <p>住所</p>
    <span><%= address.address %></span>
    <p>宛名</p>
    <span><%= address.name %></span>
    <p><%= link_to '編集する', edit_public_address_path(address.id) %></p>
    <%= link_to "削除する", public_address_path(current_customer.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    
  <% end %>