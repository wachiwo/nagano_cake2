<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h1>商品一覧(全<%= @items_all.count %>件)</h1>
    </div>
  </div>
  
      <% @items.each do |item| %>
      
        <% if item.image.attached? %>
          <%= image_tag item.image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      <span><%= item.name %></span>
      <span><%= item.price %></span>
      
      <% end %>
