 <div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h1>商品一覧</h1>
    </div>
    <div class="row">
      <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table text-center admin-items mb-5">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                <u><%= item.name %></u></td>
                <% end %>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><% if item.is_active == true %>
              <p>販売中</p> <%#if文で表示するようにする。ないとただのtureがでる%>
              <% else %>
              <p>販売停止中</p>
              <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <%#かみなりをつかってページ数を表示させるv%>
    </div>
  </div>

