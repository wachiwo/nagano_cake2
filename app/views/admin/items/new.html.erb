  <div class="container">
    <div class="row">
      <div class="col-sm-8 px-sm-0 offset-sm-1">
        <h2>商品新規登録</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 px-sm-0 mx-auto mb-5">
        <%= form_with model: @item, url: admin_items_path do |f| %>
          <table>
              <tr>
                <th><%= f.label :商品画像 %></th>
                <th><%= f.file_field :image, accept: "image/*" %></th>

              </tr>

              <tr>
                <th><%= f.label :商品名 %></th>
                <td><%= f.text_field :name, placeholder:"商品名" %></td>
              </tr>
              <tr>
                <th><%= f.label :商品説明 %></th>
                <td><%= f.text_area :introduction,placeholder:"ここに説明文を記述します" %></td>
              </tr>

              <tr>
                <th><%= f.label :ジャンル %></th>
                <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
              </tr>
               <%#= f.collection_select :genre_id, @genres, :id, :name %>
              <tr>
                <th><%= f.label :税抜価格 %></th>
                <td><%= f.text_field :price, placeholder:"1000" %>円</td>
              </tr>
              <tr>
                <th>販売ステータス</th> <%#https://qiita.com/d0ne1s/items/404781099598f908bd2a 参考url$%>
                  <td>
                    <%= f.radio_button :is_active, :'販売中' %>
                    <%= f.label :is_active, '販売中' %>
                    <%= f.radio_button :is_active, :'販売停止中'%>
                    <%= f.label :is_active, '販売停止中' %>
                  </td>
              </tr>

              <tr>
                <th><%= f.submit '投稿' %></th>
              </tr>
        <% end %>
         </table>
    </div>
    </div>
  </div>