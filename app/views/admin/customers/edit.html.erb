<h1>名前さんの会員情報編集</h1>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>


  <h4>氏名</h4>
  <%= f.text_field :last_name %> <%= f.text_field :first_name %>

  <h4>フリガナ</h4>
  <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>

  <h4>郵便番号</h4>
  <%= f.text_area :postal_code %>

  <h4>住所</h4>
  <%= f.text_area :address %>

  <h4>電話番号</h4>
  <%= f.text_area :telephone_number %>

  <h4>郵便番号</h4>
  <%= f.text_area :email %>


  <%= f.submit '変更を保存' %>

<% end %>