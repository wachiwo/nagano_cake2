  <div class="genre-index">
    <div class="container mt-5 mb-5">
      <div class="row">
        <div class="col">
         <h1>ジャンル一覧</h1>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
            <%= f.label :name, "ジャンル名" %>
            <%= f.text_field :name %>
            <%= f.submit "新規登録" %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-5 mt-3">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>ジャンル</th>
                <th colspan="1"></th>
              </tr>
            </thead>
            <tbody>
        　     <% @genres.each do |genre| %>
        　       <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>